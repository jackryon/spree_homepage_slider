<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<h1>Featured Slide</h1>

<table>
  <tr data-hook="name">
    <th>name</th>
    <td>
      <%= @featured_slide.name %>
    </td>
  </tr>
  <tr data-hook="body">
    <th>description</th>
    <td>
      <%= @featured_slide.description %>
    </td>
  </tr>
</table>

<p>
  <%= link_to_edit @featured_slide, :class => 'edit_slide' %> <%= t(:or) %>
  <%= link_to t(:back), collection_url %>
</p>
